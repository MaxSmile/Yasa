<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/shape_horizontal_margin"
    android:paddingRight="@dimen/shape_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@color/colorPrimary"
    tools:context=".app.ui.ShapesActivity">

    <RelativeLayout
        android:layout_marginBottom="@dimen/shape_distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_width="@dimen/shape_square_size"
                android:layout_height="@dimen/shape_square_size"
                android:layout_marginRight="@dimen/shape_distance"
                android:background="@drawable/shape1"
                android:clickable="true"
                android:onClick="onShapeClick"
                android:tag="1"/>
            <ImageButton
                android:layout_width="@dimen/shape_square_size"
                android:layout_height="@dimen/shape_square_size"
                android:background="@drawable/shape2"
                android:clickable="true"
                android:onClick="onShapeClick"
                android:tag="2"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginBottom="@dimen/shape_distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_width="@dimen/shape_square_size"
                android:layout_height="@dimen/shape_square_size"
                android:layout_marginRight="@dimen/shape_distance"
                android:background="@drawable/shape3"
                android:clickable="true"
                android:onClick="onShapeClick"
                android:tag="3"/>
            <ImageButton
                android:layout_width="@dimen/shape_square_size"
                android:layout_height="@dimen/shape_square_size"
                android:background="@drawable/shape4"
                android:clickable="true"
                android:onClick="onShapeClick"
                android:tag="4"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginBottom="@dimen/shape_distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_width="@dimen/shape_square_size"
                android:layout_height="@dimen/shape_square_size"
                android:layout_marginRight="@dimen/shape_distance"
                android:background="@drawable/shape5"
                android:clickable="true"
                android:onClick="onShapeClick"
                android:tag="5"/>
            <ImageButton
                android:layout_width="@dimen/shape_square_size"
                android:layout_height="@dimen/shape_square_size"
                android:background="@drawable/shape6"
                android:clickable="true"
                android:onClick="onShapeClick"
                android:tag="6"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginBottom="@dimen/shape_distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_width="@dimen/shape_square_size"
                android:layout_height="@dimen/shape_square_size"
                android:layout_marginRight="@dimen/shape_distance"
                android:background="@drawable/shape7"
                android:clickable="true"
                android:onClick="onShapeClick"
                android:tag="7"/>
            <ImageButton
                android:layout_width="@dimen/shape_square_size"
                android:layout_height="@dimen/shape_square_size"
                android:background="@drawable/shape8"
                android:clickable="true"
                android:onClick="onShapeClick"
                android:tag="8"/>
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>
