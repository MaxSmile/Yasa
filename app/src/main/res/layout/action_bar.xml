<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageButton android:background="@null"
        android:id="@+id/back"
        android:layout_width="@dimen/action_bar_pic_height"
        android:layout_height="@dimen/action_bar_pic_height"
        android:src="@drawable/abc_ic_ab_back"
        android:scaleType="fitCenter"
        android:padding="2dp"
        android:onClick="onBack"
        android:layout_alignParentLeft="true"/>
    <TextView android:background="@null"
        android:id="@+id/title"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:padding="8dp"
        android:layout_toRightOf="@id/back"
        android:text="@string/app_name"
        />
    <ImageButton android:background="@null"
        android:scaleType="fitCenter"
        android:id="@+id/forward"
        android:layout_width="@dimen/action_bar_pic_height"
        android:layout_height="@dimen/action_bar_pic_height"
        android:src="@drawable/abc_ic_ab_forward"
        android:layout_alignParentRight="true"
        android:padding="2dp"
        android:onClick="onForward"
        />


</RelativeLayout>